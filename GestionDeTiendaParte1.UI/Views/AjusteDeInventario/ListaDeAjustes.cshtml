@model IEnumerable<GestionDeTiendaParte1.Model.AjusteDeInventario>

@{
    ViewData["Title"] = "Lista De Ajustes";
}

<h1 style="color: #000; text-align: center; font-family: Georgia, serif; font-size: 30px; font-weight: lighter; margin-bottom: 20px;">Ajustes</h1>

<div class="card-container">
    @foreach (var item in Model)
    {
        <div class="card">
   
            <p>Cantidad actual: @Html.DisplayFor(modelItem => item.CantidadActual)</p>
            <p>Tipo: @Html.DisplayFor(modelItem => item.Tipo)</p>
            <p>Ajuste: @Html.DisplayFor(modelItem => item.Ajuste)</p>
            <p>Nombre del usuario: @Html.DisplayFor(modelItem => item.Usuario.Nombre)</p>
            <a asp-action="DetalleDelAjuste" asp-route-detalleAjuste="@item.Id" class="btn icon-slide-left">Detalles del Ajuste</a>
            <a asp-action="Index" class="btn btn-back">Volver</a>
        </div>
    }
</div>

<style>
    .card-container {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
    }

    .card {
        background-color: #f0f0f0;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        flex: 1 0 calc(33.33% - 20px);
        max-width: calc(33.33% - 20px);
        transition: box-shadow 0.3s ease, background-color 0.3s ease; 
    }

        .card:hover {
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2); 
            background-color: #e0e0e0; 
        }

    .btn {
        display: inline-block;
        margin-top: 10px;
        padding: 8px 16px;
        background-color: #fff;
        color: #000;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        text-decoration: none;
        position: relative;
    }

        .btn:hover {
            background-color: #007bff;
        }

    .icon-slide-left::after {
        content: "➕"; 
        position: absolute;
        color: #fff;
        left: -20%; 
        transition: 0.25s ease; 
        opacity: 0; 
    }

    .icon-slide-left:hover::after {
        left: 20px;
        opacity: 1; 
       
    }

    .icon-slide-left:hover span {
        margin-left: 20px; 
    }
</style>
