@model GestionDeTiendaParte1.Model.Venta

@{
    ViewData["Title"] = "Create";
}

<h1 class="display-4 text-center">Crear Venta</h1>

<h4 class="text-center">Detalles de la Venta</h4>
<hr class="mb-4" />
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-lg p-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group">
                    <label asp-for="NombreCliente" class="control-label font-weight-bold">Nombre del Cliente</label>
                    <input asp-for="NombreCliente" class="form-control" placeholder="Ingrese el nombre del cliente" />
                    <span asp-validation-for="NombreCliente" class="text-danger"></span>
                </div>

                <!-- Espacio para separar los botones del resto del formulario -->
                <div class="form-group mb-4"></div>

                <div class="form-group d-flex justify-content-between mt-5">
                    <input type="submit" value="Crear" class="btn btn-primary btn-lg" />
                    <a asp-action="Index" class="btn btn-secondary btn-lg">Volver a la lista</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

