@model IEnumerable<GestionDeTiendaParte2.Model.AjusteDeInventario>

@{
    ViewData["Title"] = "DetalleDelAjuste";
}

<div class="page-container">
    <h1 style="color: #000; text-align: center; font-family: Georgia, serif; font-size: 30px; font-weight: lighter; margin-bottom: 20px;">Detalle del Ajuste</h1>

    <div class="card-container">
        @foreach (var item in Model)
        {
            <div class="card">
                <p>Cantidad Actual: @Html.DisplayFor(modelItem => item.CantidadActual)</p>
                <p>Ajuste: @Html.DisplayFor(modelItem => item.Ajuste)</p>
                <p>Tipo: @Html.DisplayFor(modelItem => item.Tipo)</p>
                <p>Observaciones: @Html.DisplayFor(modelItem => item.Observaciones)</p>
                <p>Fecha: @Html.DisplayFor(modelItem => item.Fecha)</p>
                <p>Usuario: @Html.DisplayFor(modelItem => item.Usuario.Nombre)</p>
                <a asp-action="ListaDeAjustes" asp-route-ajuste="@item.Id_Inventario" class="btn btn-back">Volver</a>
            </div>
        }
    </div>
</div>

<style>
    body-a {
        margin: 0;
        padding: 0;
        font-family: 'Arial', sans-serif;
        background-color: #f5f5f5;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .page-container {
        text-align: center;
    }

    .card-container {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
    }

    .card {
        background: #f0f0f0;
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        max-width: 450px;
        margin: 20px;
        padding: 20px;
        text-align: left;
        flex: 1 0 calc(33.33% - 20px);
        max-width: calc(33.33% - 20px);
        transition: box-shadow 0.3s ease, background-color 0.3s ease;
    }

        .card:hover {
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            background-color: #e0e0e0;
        }
       

    h1 {
        color: #333;
        margin-bottom: 20px;
    }

    .btn-back {
        background: #00e22 !important;
        border: none;
        border-radius: 4px;
        padding: 8px 12px;
        color: black;
        text-decoration: none;
        display: inline-block;
        margin-top: 10px;
    }

        .btn-back:hover {
            background: #007bff !important;
        }

    .btn:focus {
        box-shadow: none;
    }
</style>