@{
    @model GestionDeTiendaParte1.UI.Models.UsuarioLoginViewModel
    Layout = null;
}

@if (ViewData["Error"] != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewData["Error"]
    </div>
}
<!DOCTYPE html>
<html>
<head>
    <title>Loguearse</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/test.css"/>
    <script src="https://kit.fontawesome.com/3bbe632e6f.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/test.css" />
</head>
<body>
<section class="vh-100">
    <div class="container py-5 h-100">
        <div class="row d-flex align-items-center justify-content-center h-100">
            <div class="col-md-8 col-lg-7 col-xl-6">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
                     class="img-fluid" alt="Phone image">
            </div>
            <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                <div>
                    <h1 class="fw-bold mb>-5">Iniciar Sesión</h1>
                </div>
                <form asp-action="Loguearse" method="post">
                    <!-- Email input -->
                    <div data-mdb-input-init class="form-outline mb-4">
                        <input type="text" id="form1Example13" class="form-control form-control-lg" required asp-for="Nombre"  />
                        <label class="form-label" for="form1Example13">Nombre</label>
                    </div>

                    <!-- Password input -->
                    <div data-mdb-input-init class="form-outline mb-4">
                            <input type="password" id="form1Example23" class="form-control form-control-lg" required asp-for="Clave" />
                        <label class="form-label" for="form1Example23">Clave</label>
                    </div>

                    <div class="d-flex justify-content-around align-items-center mb-4">

                            <a href="@Url.Action("Registrarse", "Login")">¿No tiene Cuenta? Regístrese Acá</a>
                            <a href="@Url.Action("CambioDeClave", "Login")">Cambiar Clave</a>
                    </div>

                    <!-- Submit button -->
                    <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-lg btn-block">Iniciar Sesión</button>

                    <div class="divider d-flex align-items-center my-4">
                        <p class="text-center fw-bold mx-3 mb-0 text-muted">O</p>
                    </div>

                        <div class="d-flex ">
                            <a data-mdb-ripple-init class="btn btn-primary btn-lg" style="background-color: #3b5998" href="@Url.Action("LoguearseConFacebook", "Login")" role="button">
                                <i class="fab fa-facebook-f me-2"></i> Facebook
                            </a>
                            <a data-mdb-ripple-init class="btn btn-primary btn-lg" style="background-color: #e92c19" href="@Url.Action("LoguearseConGoogle", "Login")" role="button">
                                <i class="fab fa-google me-2"></i> Google
                            </a>
                        </div>

                </form>
            </div>
        </div>
    </div>
</section>
</body>
</html>