@model GestionDeTiendaParte2.UI.Models.UsuarioViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Registrarse</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/test.css" />
</head>
<body>

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
<section class="vh-100" style="background-color: #eee;">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Registrarse</p>

                <form asp-controller="Login" asp-action="Registrarse"class="mx-1 mx-md-4" method="post">

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                    <div data-mdb-input-init class="form-outline flex-fill mb-0">
                                                <input type="text" id="form3Example1c" class="form-control" required asp-for="Nombre" />
                      <label class="form-label" for="form3Example1c">Nombre</label>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                    <div data-mdb-input-init class="form-outline flex-fill mb-0">
                      <input type="email" id="form3Example3c" class="form-control" required asp-for="CorreoElectronico" />
                                                <label class="form-label" for="form3Example3c">Correo electrónico</label>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                    <div data-mdb-input-init class="form-outline flex-fill mb-0">
                       <input type="password" id="form3Example4c" class="form-control" required asp-for="Clave" />
                      <label class="form-label" for="form3Example4c">Clave</label>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                    <div data-mdb-input-init class="form-outline flex-fill mb-0">
                         <input type="password" id="form3Example4cd" class="form-control" required asp-for="ConfirmarClave" />
                                                <label class="form-label" for="form3Example4cd">Repita la Clave</label>
                    </div>
                  </div>


                  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                    <input  type="submit" value="Registrarse" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-lg"/>
                  </div>

                </form>
                                    <div class="d-flex justify-content-around align-items-center mb-4">

                                        <a href="@Url.Action("Loguearse", "Login")">¿Ya tiene cuenta? Inicie Sesión Acá</a>
                                    </div>
              </div>
              <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                                <img src="https://neubox.com/blog/wp-content/uploads/2021/10/TIENDA_ONLINE_02.webp"
                  class="img-fluid" alt="Sample image">

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
</body>
</html>